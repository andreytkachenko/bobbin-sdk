(peripheral
    (group-name PWR)
    (name PWR)
    (address 0x40007000)
    (description "Power control")
    (interrupt
        (name PVD)
        (value 1)
        (description "PVD through EXTI line detection interrupt")
    )
    (register
        (name CR)
        (offset 0x0)
        (size 0x20)
        (access read-write)
        (reset-value 0x0)
        (description "Power control register (PWR_CR)")
        (field
            (name LPDS)
            (bit-offset 0)
            (bit-width 1)
            (description "Low Power Deep Sleep")
        )
        (field
            (name PDDS)
            (bit-offset 1)
            (bit-width 1)
            (description "Power Down Deep Sleep")
        )
        (field
            (name CWUF)
            (bit-offset 2)
            (bit-width 1)
            (description "Clear Wake-up Flag")
        )
        (field
            (name CSBF)
            (bit-offset 3)
            (bit-width 1)
            (description "Clear STANDBY Flag")
        )
        (field
            (name PVDE)
            (bit-offset 4)
            (bit-width 1)
            (description "Power Voltage Detector Enable")
        )
        (field
            (name PLS)
            (bit-offset 5)
            (bit-width 3)
            (description "PVD Level Selection")
        )
        (field
            (name DBP)
            (bit-offset 8)
            (bit-width 1)
            (description "Disable Backup Domain write protection")
        )
    )
    (register
        (name CSR)
        (offset 0x4)
        (size 0x20)
        (reset-value 0x0)
        (description "Power control register (PWR_CR)")
        (field
            (name WUF)
            (bit-offset 0)
            (bit-width 1)
            (access read-only)
            (description "Wake-Up Flag")
        )
        (field
            (name SBF)
            (bit-offset 1)
            (bit-width 1)
            (access read-only)
            (description "STANDBY Flag")
        )
        (field
            (name PVDO)
            (bit-offset 2)
            (bit-width 1)
            (access read-only)
            (description "PVD Output")
        )
        (field
            (name EWUP)
            (bit-offset 8)
            (bit-width 1)
            (access read-write)
            (description "Enable WKUP pin")
        )
    )
)